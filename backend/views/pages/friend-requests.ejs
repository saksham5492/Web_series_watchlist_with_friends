<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Friend Requests | BingeSync</title>
  <link rel="stylesheet" href="/css/friend-requests.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Pending Friend Requests</h1>
      <nav>
        <a href="/friends" class="nav-btn">Find Friends</a>
        <a href="/friends/list" class="nav-btn">My Friends</a>
        <a href="/watchlist/home" class="nav-btn">Home</a>
      </nav>
    </header>

    <% if (requests.length === 0) { %>
      <p class="empty">ðŸŽ‰ You have no pending friend requests!</p>
    <% } else { %>
      <div class="cards">
        <% requests.forEach(req => { %>
          <div class="card">
            <div class="avatar"><i class="fa-solid fa-user"></i></div>
            <div class="info">
              <h3><%= req.name %></h3>
              <p><%= req.email %></p>
            </div>
            <button class="accept-btn" data-id="<%= req.id %>">
              <i class="fa fa-check"></i> Accept
            </button>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    document.querySelectorAll('.accept-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const senderId = btn.dataset.id;
        const res = await fetch('/friends/accept', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ sender_id: senderId })
        });
        const data = await res.json();
        alert(data.message);
        location.reload();
      });
    });
  </script>
</body>
</html>
