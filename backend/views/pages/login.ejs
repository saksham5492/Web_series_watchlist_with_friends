<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
  
  <% if (message) { %>
    <div class="verification-message" id="verificationMsg">
      <%= message %>
    </div>
  <% } %>

  <div class="wrapper">

    <div class="nav-left">
      <a href="#" class="logo">
          <i class="bx bx-movie-play bx-tada main-color"></i>
          BING<span class="logo-e">E</span>SYNC
      </a>
    </div>
    
    <h2>Login</h2>

    <form action="/watchlist/login" method="POST">
      
      <div class="input-field">
        <input type="text" name="email" required>
        <label>Enter your email</label>
      </div>

      <div class="input-field">
        <input type="password" name="password" required>
        <label>Enter your password</label>
      </div>

      <div class="forget">
        <label for="remember">
          <input type="checkbox" id="remember">
          <p>Remember me</p>
        </label>
        <a href="#">Forgot password?</a>
      </div>

      <button type="submit">Log In</button>

      <div class="register">
        <p>Don't have an account? <a href="/watchlist/register">Register</a></p>
      </div>
    </form>
  </div>

  <script>
    const msg = document.getElementById("verificationMsg");
    if (msg) {
      setTimeout(() => msg.remove(), 4000); 
    }
  </script>
</body>
</html>