<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% if (message) { %>
    <div class="verification-message" id="verificationMsg">
      <%= message %>
    </div>
  <% } %>

  <div class="wrapper">
    <form action="/watchlist/login" method="POST">
      <h2>Login</h2>

      <div class="input-field">
        <input type="text" name="email" required>
        <label>Enter your email</label>
      </div>

      <div class="input-field">
        <input type="password" name="password" required>
        <label>Enter your password</label>
      </div>

      <div class="forget">
        <label for="remember">
          <input type="checkbox" id="remember">
          <p>Remember me</p>
        </label>
        <a href="#">Forgot password?</a>
      </div>

      <button type="submit">Log In</button>

      <div class="register">
        <p>Don't have an account? <a href="/watchlist/register">Register</a></p>
      </div>
    </form>
  </div>

  <script>
    const msg = document.getElementById("verificationMsg");
    if (msg) {
      setTimeout(() => msg.remove(), 4000); // fade after 4 sec
    }
  </script>
</body>
</html>
